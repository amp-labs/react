{
  "name": "@amp-labs/react",
  "version": "0.1.0",
  "description": "Ampersand React library.",
  "author": {
    "name": "Ampersand Labs",
    "url": "http://withampersand.com"
  },
  "contributors": [
    {
      "name": "Joey Yang",
      "email": "joey@thirdslant.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amp-labs/react/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://github.com/amp-labs/react#readme",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "scripts": {
    "test": "jest",
    "watch": "npm run prepbuild && tsc -p tsconfig.json --watch",
    "build": "npm run prepbuild && tsc -p tsconfig.json",
    "prepbuild": "npm run clean && npm run assets",
    "clean": "rm -rf ./build/",
    "assets": "mkdir ./build/ && cp -R ./src/public/ ./build/public/",
    "lint": "eslint --ext .ts,.tsx src/ --fix",
    "lint:dry": "eslint --ext .ts,.tsx src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amp-labs/react.git"
  },
  "jest": {
    "testPathIgnorePatterns": ["build"]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.0",
    "@jest/globals": "^29.5.0",
    "@types/react": "^18.0.27",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.33.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": ">=16",
    "@chakra-ui/react": ">=2"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.9",
    "axios": "^1.3.2",
    "lodash": "^4.17.21"
  }
}
